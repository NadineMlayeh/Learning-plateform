generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FORMATEUR
  STUDENT
}

enum FormateurStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id              Int              @id @default(autoincrement())
  name            String
  email           String           @unique
  password        String
  role            Role             @default(STUDENT)
  formateurStatus FormateurStatus?
  createdAt       DateTime         @default(now())
  formations      Formation[]
}

enum FormationType {
  ONLINE
  PRESENTIEL
}

model Formation {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  price       Float
  published   Boolean       @default(false)
  type        FormationType
  location    String?
  startDate   DateTime?
  endDate     DateTime?
  formateurId Int
  formateur   User          @relation(fields: [formateurId], references: [id])
  courses     Course[]  
  createdAt   DateTime      @default(now())
}

model Course {
  id           Int       @id @default(autoincrement())
  title        String
  published    Boolean   @default(false)
  formationId  Int
  formation    Formation @relation(fields: [formationId], references: [id])
}