generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FORMATEUR
  STUDENT
}

enum FormateurStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id              Int              @id @default(autoincrement())
  name            String
  email           String           @unique
  password        String
  role            Role             @default(STUDENT)
  formateurStatus FormateurStatus?
  createdAt       DateTime         @default(now())
  formations      Formation[]
  enrollments     Enrollment[] 
}

enum FormationType {
  ONLINE
  PRESENTIEL
}

enum EnrollmentStatus {
  PENDING
  APPROVED
  REJECTED
}

model Formation {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  price       Float
  published   Boolean       @default(false)
  type        FormationType
  location    String?
  startDate   DateTime?
  endDate     DateTime?
  formateurId Int
  formateur   User          @relation(fields: [formateurId], references: [id])
  courses     Course[]  
  enrollments     Enrollment[] 
  createdAt   DateTime      @default(now())
}

model Course {
  id           Int       @id @default(autoincrement())
  title        String
  published    Boolean   @default(false)
  formationId  Int
  formation    Formation @relation(fields: [formationId], references: [id])
  lessons Lesson[]
  quizzes      Quiz[]
}
model Lesson {
  id        Int      @id @default(autoincrement())
  title     String
  pdfUrl    String
  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id])
}
model Quiz {
  id        Int       @id @default(autoincrement())
  title     String
  courseId  Int
  course    Course    @relation(fields: [courseId], references: [id])
  questions Question[]
}

model Question {
  id      Int      @id @default(autoincrement())
  text    String
  quizId  Int
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  choices Choice[]
}

model Choice {
  id         Int      @id @default(autoincrement())
  text       String
  isCorrect  Boolean
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}

model Enrollment {
  id           Int               @id @default(autoincrement())
  studentId    Int
  student      User              @relation(fields: [studentId], references: [id])
  formationId  Int
  formation    Formation         @relation(fields: [formationId], references: [id])
  status       EnrollmentStatus  @default(PENDING)
  createdAt    DateTime          @default(now())

  @@unique([studentId, formationId])
}
