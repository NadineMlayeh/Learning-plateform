generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FORMATEUR
  STUDENT
}

enum FormateurStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id              Int              @id @default(autoincrement())
  name            String
  email           String           @unique
  password        String
  role            Role             @default(STUDENT)
  formateurStatus FormateurStatus?
  createdAt       DateTime         @default(now())
}
